{
  "name": "e-student-portal-monorepo",
  "version": "1.0.0",
  "description": "Root package for e-student-portal monorepo",
  "main": "index.js",
 "scripts": {
   "dev": "dotenv -e backend/prisma/.env -- npm run dev-frontend",
    "start": "npm start --prefix frontend",
    "prisma:generate": "npx prisma generate --schema backend/prisma/schema.prisma", 
    "prisma:migrate": "npx prisma migrate dev --schema backend/prisma/schema.prisma", 
    "prisma:push": "npx prisma db push --schema backend/prisma/schema.prisma",
   "dev-frontend": "npm run dev --prefix frontend"
},
  "keywords": [
    "nextjs",
    "prisma",
    "monorepo"
  ],
