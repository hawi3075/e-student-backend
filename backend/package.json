{
  "name": "e-student-backend",
  "version": "1.0.0",
  "description": "Backend for e-student portal",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "nodemon server.ts",
    "start": "node dist/server.js",
    "prisma:generate": "prisma generate --schema backend/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema backend/prisma/schema.prisma",
    "prisma:push": "prisma db push --schema backend/prisma/schema.prisma"
  },
  "dependencies": {
    "@prisma/client": "^4.16.2",
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "prisma": "^4.16.2"
  }
}
