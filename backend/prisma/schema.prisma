generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  STUDENT
}

model User {
  id       Int    @id @default(autoincrement())
  name     String
  email    String @unique
  password String
  role     Role   @default(STUDENT)
}

model Student {
  id        Int    @id @default(autoincrement())
  name      String
  email     String @unique
  courseId  Int
  course    Course @relation(fields: [courseId], references: [id])
}

model Course {
  id       Int       @id @default(autoincrement())
  name     String
  students Student[]
}
