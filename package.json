    "dotenv-cli": "^11.0.0",
    "prisma": "^5.17.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
